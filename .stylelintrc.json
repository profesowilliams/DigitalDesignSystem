{
  "extends": "stylelint-config-standard-scss",
  "rules":
    {
      "max-nesting-depth": [3, {
        "ignorePseudoClasses": [
        "hover",
        "active",
        "visited",
        "^focus-",
        "disabled"
      ] }]
    },
  "selector-pseudo-class-no-unknown": [
    true,
    {
      "ignorePseudoClasses": [
        "tds-",
        "td-"
      ]
    }
  ]
}